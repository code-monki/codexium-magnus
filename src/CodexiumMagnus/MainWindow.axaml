<!-- filepath: src/CodexiumMagnus/MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CodexiumMagnus.MainWindow"
        Width="1200"
        Height="800"
        Title="Codexium Magnus">
  <Grid RowDefinitions="Auto,*" ColumnDefinitions="240,*,360">
    <!-- Top bar -->
    <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#222" Padding="12">
      <TextBlock Text="Codexium Magnus" Foreground="White" FontSize="16" FontWeight="Bold"/>
    </Border>

    <!-- Left nav -->
    <Border Grid.Row="1" Grid.Column="0" Background="#333" Padding="8">
      <StackPanel Spacing="6">
        <TextBlock Text="Navigation" Foreground="White" FontWeight="Bold"/>
        <Button Content="Articles" Margin="0,4,0,0"/>
        <Button Content="Bibliography"/>
        <Button Content="Creators"/>
        <Button Content="Issues by Year"/>
        <Button Content="Reports"/>
      </StackPanel>
    </Border>

    <!-- Center: CEF placeholder -->
    <Border Grid.Row="1" Grid.Column="1" Background="#1e1e1e" Padding="8">
      <TextBlock Text="CEFWindow placeholder (render area)" Foreground="White"/>
    </Border>

    <!-- Right: Issues / Reports -->
    <Border Grid.Row="1" Grid.Column="2" Background="#2a2a2a" Padding="8">
      <StackPanel Spacing="6">
        <TextBlock Text="Issues / Reports" Foreground="White" FontWeight="Bold"/>
        <TextBlock Text="Reports from shared ReportWriter will appear here." Foreground="#ddd" TextWrapping="Wrap"/>
      </StackPanel>
    </Border>
  </Grid>
</Window>